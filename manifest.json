{
  "manifest_version": 2,
  "icons": {
    "16": "icon/icon-16.png",
    "32": "icon/icon-32.png",
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  },
  "description": "想要調整字體大小不再是難事！",
  "browser_action": {
    "default_icon": "icon/icon-128.png",
    "default_title": "找我？"
  },
  "name": "字己來",
  "version": "1.2.1",
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts" : ["script/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://www.catchplay.com/*"],
      "css": ["style/cp.css"],
      "js": ["lib/jquery-3.2.1.min.js", "script/cp.js"]
    },
    {
      "matches": ["http://video.friday.tw/movie/detail/*"],
      "css": ["style/fr.css"],
      "js": ["lib/jquery-3.2.1.min.js", "script/fr.js"]
    }
  ]
}
